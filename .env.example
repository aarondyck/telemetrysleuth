
# Database Configuration
DB_HOST=db              # Database server hostname or IP (use 'localhost' for local dev)
DB_PORT=5432            # Database server port (default PostgreSQL is 5432)
DB_NAME=telemetrysleuth # Name of the PostgreSQL database
DB_USER=postgres        # Database username
DB_PASSWORD=postgres123 # Database password

# Application Configuration
SECRET_KEY=your-secret-key-here # Flask secret key for sessions and CSRF protection
DEBUG=false                     # Flask debug mode (true/false)
FLASK_ENV=production            # Flask environment (development/production)

# TCP Listener Configuration
TCP_HOST=0.0.0.0    # Host/IP for TCP listener (0.0.0.0 = all interfaces)
TCP_PORT=9000       # Port for TCP listener to accept SMDR data

# WebSocket Configuration
WEBSOCKET_PORT=8765 # Port for WebSocket server (real-time updates)

# Logging Configuration
LOG_LEVEL=INFO      # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_DIR=/app/logs   # Directory for log files

# Optional Development Settings
ENVIRONMENT=production # Custom environment label (e.g., development, production)

# Web Interface
WEB_PORT=5000            # Port for Flask web interface
MAX_RECORDS_PER_PAGE=100 # Max records per page in web UI

# Advanced Settings
SQLALCHEMY_TRACK_MODIFICATIONS=false # SQLAlchemy event system (usually false)
SQLALCHEMY_ECHO=false                # SQLAlchemy SQL echo (true/false)

# Optional Performance Tuning
GUNICORN_WORKERS=4   # Number of Gunicorn worker processes
GUNICORN_THREADS=2   # Number of threads per Gunicorn worker
